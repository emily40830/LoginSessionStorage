<div class="message">
  {{#if message}}
  <div class="alert alert-danger" role="alert">
    <span>Can not find this account. please Sign up.</span>
  </div>
  {{/if}}
  {{#if error}}
  <div class="alert alert-danger" role="alert">
    <span>Your password can not match your account.</span>
  </div>
  {{/if}}

</div>

<form action="/" method="post">
  <div class="wrapper">

    <div id="setting">

      <h5>Email: </h5>
      <input type="text" value="{{input.email}}" name="email" class="input emailInput">

      <h5>Password: </h5>
      <input type="text" value="{{input.password}}" name="password" class="input passwordInput">
      <div></div>
      <div class="btnLogin">
        <button id="btnLogin" type="submit">
          Sign in
        </button>
      </div>


    </div>

  </div>


</form>